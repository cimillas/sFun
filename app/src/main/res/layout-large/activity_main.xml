<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="?backgroundTheme"
    tools:context=".mainpack.MainActivity">

    <TextView
        style="?attr/textTitle"
        android:textColor="?attr/textTitleColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:id="@+id/title_textview"
        android:textSize="63sp"
        android:layout_alignLeft="@+id/option_imagebutton"
        android:layout_alignStart="@+id/option_imagebutton"
        android:layout_toEndOf="@+id/about_button"
        android:layout_alignRight="@+id/about_button"
        android:layout_alignEnd="@+id/about_button"
        android:layout_above="@+id/play_button"
        android:gravity="center"
        android:layout_marginBottom="100dp" />
        <!--style="@style/Base.TextAppearance.AppCompat.Title"-->


    <ImageButton
        style="?attr/buttonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options_button_text"
        android:id="@+id/option_imagebutton"
        android:textColor="#ffffff"
        android:src="@android:drawable/ic_menu_preferences"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/play_button"
        android:layout_toLeftOf="@+id/play_button"
        android:layout_toStartOf="@+id/play_button"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_button"
        android:src="@drawable/play_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        style="?attr/textTitle"
        android:textColor="?attr/textTitleColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/play"
        android:id="@+id/textView"
        android:layout_below="@+id/play_button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_button"
        android:layout_alignTop="@+id/option_imagebutton"
        android:layout_toRightOf="@+id/play_button"
        android:layout_toEndOf="@+id/play_button"
        android:src="@android:drawable/ic_menu_info_details"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:id="@+id/locationTextView"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qr_imageButton"
        android:src="@drawable/qr"
        android:layout_alignBottom="@+id/locationTextView"
        android:layout_alignLeft="@+id/option_imagebutton"
        android:layout_alignStart="@+id/option_imagebutton"
        android:layout_alignRight="@+id/option_imagebutton"
        android:layout_alignEnd="@+id/option_imagebutton"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logIn_main_imageButton"
        android:src="@drawable/log_in_icon"
        android:layout_alignBottom="@+id/locationTextView"
        android:layout_alignLeft="@+id/about_button"
        android:layout_alignStart="@+id/about_button"
        android:layout_alignTop="@+id/qr_imageButton"
        android:layout_alignRight="@+id/about_button"
        android:layout_alignEnd="@+id/about_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="large size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
