<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hpi.labordacimas.simplefun2.gamepack.highScore.HighScore"
    android:background="?backgroundTheme">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <TextView
            style="?attr/textTitle"
            android:textColor="?attr/textTitleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/level_textView_string"
            android:id="@+id/leveltextView"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center" />

        <TextView
            style="?attr/textTitle"
            android:textColor="?attr/textTitleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/name_textView_string"
            android:id="@+id/nameTextView"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center" />
    </TableRow>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ListView
            style="?attr/textBody"
            android:textColor="?attr/textBodyColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_highscore"
            android:choiceMode="none" />

    </FrameLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center">

        <Button
            style="?attr/buttonText"
            android:textColor="?attr/textBodyColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_menu_button_text"
            android:id="@+id/main_menu_button"
            android:gravity="center_vertical|center_horizontal"
            android:layout_column="0" />

        <Button
            style="?attr/buttonText"
            android:textColor="?attr/textBodyColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_again_button_text"
            android:id="@+id/play_again_button"
            android:layout_column="1" />
    </TableRow>

</LinearLayout>
