<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hpi.labordacimas.simplefun2.gamepack.highScore.PopupScore"
    android:background="?backgroundTheme"
    android:stretchColumns="*">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagebutton_close_highscore"
        android:layout_gravity="right"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
            style="?textTitle"
            android:textColor="?attr/textTitleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_label"
            android:id="@+id/player_score_label"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp" />

        <TextView
            style="?textBody"
            android:textColor="?attr/textBodyColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_score"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" />





        <TextView
            style="?textTitle"
            android:textColor="?attr/textTitleColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_label"
            android:id="@+id/player_time_label"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" />

        <TextView
            style="?textBody"
            android:textColor="?attr/textBodyColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_time"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" />




        <EditText
            style="?textBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/player_name_editText"
            android:ems="10"
            android:id="@+id/editText_Player_name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp">

        <ImageButton
            style="?attr/buttonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close_text"
            android:id="@+id/button_restart_highscore"
            android:layout_column="0"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_rotate"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp" />

        <ImageButton
            style="?attr/buttonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_button_string"
            android:id="@+id/save_score_imagebutton"
            android:layout_column="1"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_save"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp" />
    </TableRow>
</LinearLayout>
